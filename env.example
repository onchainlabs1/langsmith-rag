# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# API Configuration
API_TITLE="LangSmith RAG System"
API_VERSION="1.0.0"
API_DESCRIPTION="Production-ready RAG system with observability"
LOG_LEVEL="INFO"

# Security Configuration
JWT_SECRET_KEY="your-super-secret-jwt-key-here-change-in-production"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
BCRYPT_ROUNDS=12

# API Keys (DO NOT COMMIT THESE TO VERSION CONTROL)
OPENAI_API_KEY="your-openai-api-key-here"
GROQ_API_KEY="your-groq-api-key-here"
LANGSMITH_API_KEY="your-langsmith-api-key-here"
LANGSMITH_PROJECT="ai-act-rag"
LANGCHAIN_API_KEY="your-langchain-api-key-here"

# Database Configuration (if using external DB)
DATABASE_URL="sqlite:///./rag_system.db"

# Redis Configuration (for production caching)
REDIS_URL="redis://localhost:6379"

# Monitoring Configuration
PROMETHEUS_PORT=8001
GRAFANA_PORT=3000
JAEGER_ENDPOINT="http://localhost:14268/api/traces"

# Security Headers
CORS_ORIGINS="http://localhost:3000,http://localhost:8501,http://localhost:8000"
RATE_LIMIT_PER_MINUTE=60
MAX_REQUEST_SIZE=1048576  # 1MB

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES="pdf,txt,docx"

# Logging Configuration
LOG_FORMAT="json"
LOG_FILE="logs/rag_system.log"
LOG_ROTATION="daily"
LOG_RETENTION_DAYS=30

# Development vs Production
ENVIRONMENT="development"  # or "production"
DEBUG=false